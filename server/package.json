{
  "name": "mwanzo-tunes-server",
  "version": "1.0.0",
  "private": true,
  "description": "Backend for MwanzoTunes",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch index.ts",
    "build": "tsc && npm run fix-paths",
    "start": "node dist/index.js",
    "fix-paths": "tsc-alias -p tsconfig.json",

    "migrate:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "migrate:apply":   "drizzle-kit migrate --config=drizzle.config.ts",
    "migrate:push":    "drizzle-kit push --config=drizzle.config.ts",

    "migrate": "npm run migrate:apply",

    "postbuild": "npm run migrate"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "express": "^4.21.2",
    "express-openid-connect": "^2.19.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "multer": "^1.4.5-lts.2",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/hpp": "^0.2.7",
    "@types/multer": "^1.4.13",
    "@types/node": "^24.10.0",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.5",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}